{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "types": ["node", "jest"],

    "target": "esnext",
    "module": "commonjs",
    "outDir": "./bin"
  },

  "include": ["./src/**/*.ts"]
}
